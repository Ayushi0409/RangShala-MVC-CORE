@model RangShala.Models.Artwork

@{
    ViewData["Title"] = "Add Artwork";
}

<h2>Add New Artwork</h2>

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@if (!string.IsNullOrEmpty(TempData["Error"] as string))
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<form asp-action="AddAcrylicPainting" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="PaintingName">Painting Name</label>
        <input asp-for="PaintingName" class="form-control" required />
        <span asp-validation-for="PaintingName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaintingPrice">Price (INR)</label>
        <input asp-for="PaintingPrice" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="PaintingPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArtistName">Artist Name</label>
        <input asp-for="ArtistName" class="form-control" required />
        <span asp-validation-for="ArtistName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaintingImage">Upload Image</label>
        <input asp-for="PaintingImage" type="file" class="form-control-file" accept="image/*" />
    </div>
    <button type="submit" class="btn btn-primary">Add Artwork</button>
</form>