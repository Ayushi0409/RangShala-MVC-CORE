@model List<RangShala.Models.Customer>

@{
    ViewBag.Title = "View Customer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>View Customer</h2>

<table border="1" cellpadding="5" cellspacing="0" style="width: 100%; border-collapse: collapse;">
    <thead>
        <tr style="background-color: #007bff; color: white;">
            <th>Customer No:</th>
            <th>Customer Name:</th>
            <th>Email:</th>
            <th>Country:</th>
            <th>City:</th>
            <th>Customer No:</th>
            <th>Delete Customer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.CustomerName</td>
                <td>@customer.Email</td>
                <td>@customer.Country</td>
                <td>@customer.City</td>
                <td>@customer.Mobile</td>
                <td>
                    <a href="@Url.Action("DeleteCustomer", "Admin", new { id = customer.Id })" onclick="return confirm('Are you sure you want to delete this customer?');">
                        <span style="cursor: pointer; color: red;">🗑️</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #ddd;
    }

    a {
        text-decoration: none;
    }
</style>