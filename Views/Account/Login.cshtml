@{
    ViewBag.Title = "Login";
}
<style>
    /* Your existing CSS remains unchanged */
    body {
        background-color: #ffffff;
        color: #000000;
        font-family: 'Poppins', sans-serif;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-card {
        background: #ffffff;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        width: 400px;
    }

    h3 {
        text-align: center;
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 5px;
    }

    p {
        text-align: center;
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 20px;
    }

    .form-control {
        background-color: transparent;
        color: #000;
        border: none;
        border-bottom: 1px solid #999;
        border-radius: 0;
        padding: 8px 0;
    }

        .form-control::placeholder {
            color: #aaa;
        }

        .form-control:focus {
            border-bottom: 1px solid #000;
            box-shadow: none;
            outline: none;
        }

    .input-group-text {
        background: transparent;
        border: none;
        cursor: pointer;
    }

    .forgot-password {
        display: block;
        text-align: right;
        font-size: 0.85rem;
        margin-bottom: 15px;
        color: #666;
    }

        .forgot-password:hover {
            text-decoration: underline;
            color: #000;
        }

    .btn-custom {
        width: 100%;
        background: #000;
        color: #fff;
        font-weight: bold;
        border: none;
        padding: 12px;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-custom:hover {
            background: #444;
        }

    .register-link {
        text-align: center;
        font-size: 0.9rem;
        margin-top: 15px;
    }

        .register-link a {
            font-weight: 600;
            text-decoration: none;
            color: #000;
        }

            .register-link a:hover {
                text-decoration: underline;
            }

    .alert {
        margin-bottom: 20px;
        padding: 10px;
        border-radius: 5px;
        text-align: center;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <h3>Welcome to RangShala</h3>
        <p>Log in to your account</p>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <form method="post" action="@Url.Action("Login", "Account")">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <input type="email" class="form-control" name="email" placeholder="Email Address" required>
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <input type="password" class="form-control" id="loginPassword" name="password" placeholder="Enter Password" required>
                    <span class="input-group-text password-toggle" onclick="togglePassword('loginPassword')">👁</span>
                </div>
            </div>
            <a href="@Url.Action("ForgotPassword", "Account")" class="forgot-password">Forgot password?</a>
            <button type="submit" class="btn btn-custom">Login</button>
        </form>
        <p class="register-link">Don't have an account? <a href="@Url.Action("Register", "Account")">Sign up</a></p>
    </div>
</div>

<script>
    function togglePassword(id) {
        var input = document.getElementById(id);
        if (input.type === "password") {
            input.type = "text";
        } else {
            input.type = "password";
        }
    }
</script>








